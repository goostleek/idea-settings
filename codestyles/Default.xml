<code_scheme name="Default">
  <option name="LINE_SEPARATOR" value="&#10;" />
  <option name="RIGHT_MARGIN" value="160" />
  <codeStyleSettings language="XML">
    <arrangement>
      <rules>
        <section>
          <rule>
            <match>
              <NAME>xmlns:.*</NAME>
            </match>
          </rule>
        </section>
        <section>
          <rule>
            <match>
              <AND>
                <NAME>tableName</NAME>
                <XML_ATTRIBUTE />
                <XML_NAMESPACE>xmlns:.*</XML_NAMESPACE>
              </AND>
            </match>
          </rule>
        </section>
        <section>
          <rule>
            <match>
              <AND>
                <NAME>columnName</NAME>
                <XML_ATTRIBUTE />
                <XML_NAMESPACE>xmlns:.*</XML_NAMESPACE>
              </AND>
            </match>
          </rule>
        </section>
      </rules>
    </arrangement>
  </codeStyleSettings>
</code_scheme>